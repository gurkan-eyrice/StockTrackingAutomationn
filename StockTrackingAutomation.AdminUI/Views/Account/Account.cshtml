@using EntityLayer.Concrete
@model IEnumerable<EntityLayer.Concrete.UserAccount>

@{
    ViewData["Title"] = "Account";
}

<h1>Account</h1>

<table class="table">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>User Name</td>
            <td>Güncelle</td>
            <td>Sil</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Firstname</td>
                <td>@user.Lastname</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                </td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@user.Id">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
