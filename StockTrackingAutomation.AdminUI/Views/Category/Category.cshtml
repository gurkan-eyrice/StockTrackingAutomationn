@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Category Policy";
}
<h1>@ViewData["Title"]</h1>

<table class="table table-bordered">
    <thead>
    <tr>
        <td>Categories</td>
        <td>Explaining</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    </thead>
    <tbody>
        @foreach(var category in Model){
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                </td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@category.Id">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
     </tbody>
</table>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create</a>


