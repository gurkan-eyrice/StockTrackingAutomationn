@using EntityLayer.Concrete
@model List<Brand>
@{
    ViewData["Title"] = "Brand Policy";
}
<h1>@ViewData["Title"]</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Brands</td>
            <td>Explaining</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.BrandName</td>
                <td>@brand.Description</td>
                <td>
                    <a asp-action="Update" asp-route-id="@brand.Id" class="btn btn-warning btn-sm">Edit</a>
                </td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@brand.Id">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Brand" asp-action="Create" class="btn btn-primary">Create</a>


